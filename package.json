{
  "name": "get-web-manifest",
  "version": "0.0.0-semantically-released",
  "description": "Obtain the manifest for the current page",
  "scripts": {
    "build": "npm-run-all build:pkg",
    "build:pkg": "pack build",
    "test": "NODE_ENV=test jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "func-names": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src/"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ]
  },
  "devDependencies": {
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-ts-standard-pkg": "^0.4.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^7.0.0-beta.2",
    "@semantic-release/git": "^7.1.0-beta.3",
    "@semantic-release/github": "^5.4.0-beta.1",
    "@semantic-release/npm": "^5.2.0-beta.6",
    "@types/jest": "^24.0.15",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "react-app-polyfill": "^1.0.1",
    "semantic-release": "^16.0.0-beta.19",
    "sort-package-json": "^1.22.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "minNodeVersion": "8"
        }
      ]
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
